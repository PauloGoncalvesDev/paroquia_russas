@model List<News>

<div class="container text-start alert alert-danger fixed-top w-50" id="error-message-div" style="display: none; margin: 0 auto; margin-top: 60px;">
    <span id="error-message"></span>
    <button type="button" class="btn btn-danger btn-sm close-alert position-absolute" style="right: 20px" aria-label="Close">X</button>
</div>

<div class="pt-3 pb-5 row g-3">
    @{
        if (Model == null)
        {
            <p class="text-dark">Por enquanto ainda não há notícias registradas.</p>
        }
        else
        {
            <p id="nenhuma-noticia-encontrada" class="text-dark" style="display: none;">Nenhuma notícia foi encontrado.</p>

            foreach (News newsCard in Model)
            {
                <div class="card card-news text-start col-md-6 col-lg-4 noticia">
                    <img class="card-img-top" src="@newsCard.NewsImage" alt="@newsCard.Headline">
                    <div class="card-body">
                        <h5 class="card-title text-dark">
                            <a class="link-news" data-target="#modal-@newsCard.Id" data-id="@newsCard.Id">@newsCard.NewsTitle</a>
                        </h5>
                        <p class="card-text text-dark">@newsCard.Headline</p>
                        <p class="card-text"><small class="text-dark"><i class="bi bi-calendar text-dark"></i> @newsCard.CreationDate.ToString("dd/MM/yyyy")</small></p>
                    </div>
                </div>
            }
        }
    }
</div>

<div id="modal" class="modal fade text-start text-dark" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header w-100">
                <img id="image-modal" class="w-100" style="height: 30vh; object-fit: cover" />
            </div>
            <div class="modal-body">
                <h3 class="modal-title fs-4"></h3>
                <h5 class="modal-headline fs-6"></h5>
                <p class="card-text"><i class="bi bi-calendar text-dark"></i><small class="text-dark modal-date mx-2"></small></p>

                <div class="modal-content-news" style="text-align: justify">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>